
@{
    ViewBag.Title = "categoria";
}

<h2>Categoria</h2>

@Html.ActionLink("Agregar Categoria", "InsertarCategoria", null, new { miatributo = "valor1", @class = "btn btn-info" })

<h2>
    Lista de Categoria
</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.categoria)
        {
            <tr>
                <td>@item.idCategoria<td>
                <td>@item.categoria</td>
                <td>
                    @Html.ActionLink("Modificar", "ModificarCategoria", new { id = item.idCategoria }, new { miatributo = "valor1", @class = "btn btn-success" })
                    @Html.ActionLink("Eliminar", "EliminarCategoria", new { id = item.idCategoria }, new { miatributo = "valor1", @class = "btn btn-danger", onclick = "return confirm('¿Estas seguro de eliminar este registro?');" })
                </td>
            </tr>
        }

    </tbody>
</table>

@if (ViewBag.mensaje != null)
{

    <div class="alert alert-success" role="alert">
        @ViewBag.mensaje
    </div>

}
