@model La_tiendita.Models.Producto

@{
    ViewBag.Title = "Insertar";
}

<h2>Insertar</h2>

    @using (Html.BeginForm("Agregar", "Producto", FormMethod.Post))
  
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" >
    <h4>Nuevo producto</h4>
    <hr />
    <div style="margin-left: 100px; margin-right:100px;">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-6">Nombre de Producto: </label>
            @*@Html.LabelFor(model => model.NProducto, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.NProducto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Descripción del producto</label>
            @*@Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Fecha de vencimiento</label>
            @*@Html.LabelFor(model => model.FechaV, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.FechaV, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.FechaV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Existencia del producto: </label>
            @*@Html.LabelFor(model => model.Existencia, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.Existencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Existencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Precio de compra: </label>
            @*@Html.LabelFor(model => model.PrecioCompra, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.PrecioCompra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PrecioCompra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Precio de venta: </label>
            @*@Html.LabelFor(model => model.PrecioVenta, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                @Html.EditorFor(model => model.PrecioVenta, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.PrecioVenta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-6">Categoria: </label>
            @*@Html.Label("Categoria", new { @class = "control-label col-md-2" })*@
            <div class="col-md-6">
                
                @Html.DropDownList("listaCategoria", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-4">
            <div class=" col-md-12">
                @*or col-md-offset-2*@
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
    <br />
}

<div class="mb-4">
    @Html.ActionLink("Regresar a la lista de productos", "Index")
</div>
<br /><br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
